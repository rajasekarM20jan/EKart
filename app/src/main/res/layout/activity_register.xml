<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gradient"
    android:layout_height="match_parent"
    tools:context=".Register">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="30dp"
        android:text="E-Kart"
        android:textSize="20sp"
        android:gravity="center"
        android:fontFamily="@font/cherry_cream_soda"
        />

    <LinearLayout
        android:layout_width="317dp"
        android:layout_height="590dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/list"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="175dp"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/textView"
            android:layout_width="250dp"
            android:text="Enter Details for SignUp"
            android:fontFamily="@font/cherry_cream_soda"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            />

        <EditText
            android:id="@+id/signupName"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/linearbg"
            android:ems="10"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:hint="Enter Your Name"
            android:textSize="12sp"
            android:textStyle="bold"
            android:inputType="text"
            android:maxLines="1" />

        <EditText
            android:id="@+id/userName"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="bold"
            android:hint="Enter Your UserName"
            android:background="@drawable/linearbg"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:inputType="text"
            android:maxLines="1"/>
        <EditText
            android:id="@+id/mailId"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="30dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:hint="Enter Your e-Mail address"
            android:textAlignment="center"
            android:background="@drawable/linearbg"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:maxLines="1"/>
        <EditText
            android:id="@+id/mobile"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="30dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:hint="Enter Your Mobile Number"
            android:textAlignment="center"
            android:background="@drawable/linearbg"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:inputType="number"
            android:maxLength="10"/>
        <EditText
            android:id="@+id/signupPassword"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="30dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@drawable/linearbg"
            android:hint="Enter Your Password"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:ems="10"
            android:inputType="textPassword"
            android:maxLength="12"/>
        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="30dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@drawable/linearbg"
            android:hint="Confirm Your Password"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:ems="10"
            android:inputType="textPassword"
            android:maxLength="12"/>

        <android.widget.Button
            android:id="@+id/registerButton"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textAlignment="center"
            android:background="@drawable/addtocartbtn"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Register"
            android:inputType="number" />
        <TextView
            android:id="@+id/linkForSignIn"
            android:layout_width="match_parent"
            android:textStyle="italic"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:text="Existing User Click Here"
            android:layout_height="30dp"
            android:layout_margin="20dp"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>