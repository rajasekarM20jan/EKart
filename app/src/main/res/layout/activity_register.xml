<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gradient"
    android:layout_height="match_parent"
    tools:context=".Register">



    <View
        android:id="@+id/rView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/topbar"/>
    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cherry_cream_soda"
        android:text="@string/main_text"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/rView"
        app:layout_constraintEnd_toEndOf="@id/rView"
        app:layout_constraintStart_toStartOf="@id/rView"
        app:layout_constraintTop_toTopOf="@id/rView" />

    <LinearLayout
        android:layout_width="317dp"
        android:layout_height="600dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/rView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/list"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="175dp"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/textView"
            android:layout_width="250dp"
            android:text="@string/enter_details_for_signup"
            android:fontFamily="@font/cherry_cream_soda"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            />

        <EditText
            android:id="@+id/signupName"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/linearbg"
            android:ems="10"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:hint="@string/enter_your_name"
            android:textSize="12sp"
            android:textStyle="bold"
            android:inputType="text"
            android:maxLines="1" />

        <EditText
            android:id="@+id/userName"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="bold"
            android:hint="@string/enter_your_username"
            android:background="@drawable/linearbg"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:inputType="text"
            android:maxLines="1"/>
        <EditText
            android:id="@+id/mailId"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="30dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:hint="@string/enter_your_e_mail_address"
            android:textAlignment="center"
            android:background="@drawable/linearbg"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:maxLines="1"/>
        <EditText
            android:id="@+id/mobile"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="30dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:hint="@string/enter_your_mobile_number"
            android:textAlignment="center"
            android:background="@drawable/linearbg"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:inputType="number"
            android:maxLength="10"/>
        <EditText
            android:id="@+id/signupPassword"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="30dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@drawable/linearbg"
            android:hint="@string/enter_your_password"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:ems="10"
            android:inputType="textPassword"
            android:maxLength="12"/>
        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="30dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@drawable/linearbg"
            android:hint="@string/confirm_your_password"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:ems="10"
            android:inputType="textPassword"
            android:maxLength="12"/>

        <android.widget.Button
            android:id="@+id/registerButton"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textAlignment="center"
            android:background="@drawable/addtocartbtn"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="@string/register"
            android:inputType="number" />
        <TextView
            android:id="@+id/linkForSignIn"
            android:layout_width="match_parent"
            android:textStyle="italic"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:text="@string/existing_user"
            android:layout_height="30dp"
            android:layout_margin="20dp"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>