<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/list"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/cartThumbnail"
        android:layout_width="@dimen/sixty"
        android:layout_height="@dimen/sixty"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/seventy_seven"
        android:layout_marginTop="@dimen/twenty_six"
        android:layout_marginBottom="@dimen/ten"
        android:elevation="@dimen/cardview_default_elevation"
        android:paddingBottom="@dimen/twenty" />

    <TextView
        android:id="@+id/cartProductName"
        android:layout_width="@dimen/hundred_and_fifty"
        android:layout_height="@dimen/fifty"
        android:layout_alignTop="@+id/cartThumbnail"
        android:layout_marginStart="@dimen/fifty_five"
        android:layout_toEndOf="@+id/cartThumbnail"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/cartPrice"
        android:layout_width="@dimen/seventy_eight"
        android:layout_height="@dimen/thirty"
        android:layout_below="@+id/cartProductName"
        android:layout_marginStart="@dimen/fifty_five"
        android:layout_marginTop="@dimen/five"
        android:layout_toEndOf="@+id/cartThumbnail"
        android:gravity="end"
        android:textSize="14sp" />

</RelativeLayout>